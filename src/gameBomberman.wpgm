import wollok.game.*
import bomberman.*
import Enemigo.*
import nivel.*

program Bomberman {
	
	game.title("Bomberman!")
	
	// lÃ­mites del juego
	game.width(25)
	game.height(14)
	
	// fondo
	game.boardGround("background.jpg")
	game.addVisualIn(protagonista,game.at(1,1))
	musica.play()
	keyboard.up().onPressDo({protagonista.subir()})
