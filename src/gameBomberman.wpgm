	keyboard.right().onPressDo({protagonista.derecha()})
	keyboard.space().onPressDo({protagonista.tirarBomba()})
	//game.onCollideDo(protagonista,{unPowerUp => protagonista.agarrar(unPowerUp)})


	
	game.start()
	
}

	
